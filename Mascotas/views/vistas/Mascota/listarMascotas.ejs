    <p class="text-center">
      <%= mascotas[i].paisNacimiento %>
    </p>
  </div>
    <div class="col-sm-4">
      <br>
    <a style="color:white" href="/Mascota/destroy/<%=mascotas[i].id%>">
      <button class="btn btn-block btn-danger"> Borrar</button>
