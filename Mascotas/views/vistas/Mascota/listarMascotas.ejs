  <div class="row"  style="background-color: rgba(54, 25, 25, .5);color: white;border-radius: 5px;">
  <% mascotas[i].fechaNacimiento.setUTCDate(15) %>
  <div class="col-sm-8">
    <h3 class="text-center"> <%=mascotas[i].nombre%></h3>
