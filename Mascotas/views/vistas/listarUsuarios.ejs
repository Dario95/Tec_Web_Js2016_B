

  <% for(var i=0; i<usuarios.length; i++){ %>
  <div class="row" style="background-color: rgba(54, 25, 25, .5);color: white;border-radius: 5px;">
    <div class="col-sm-5">
      <h3 class="text-center"><%=usuarios[i].apellidos%></h3>
      <h4 class="text-center"> <%=usuarios[i].nombres%></h4>
